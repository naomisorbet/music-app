<% band = object %>
<% action_url = band.nil? ? bands_url : band_url(band) %>
<% button_words = band.nil? ? 'Create band' : "Edit band" %>
<form action="<%= action_url %>" method="post">
	<% if !band.nil? %>
  	<input type="hidden" name="_method" value="put">
	<% end %>

		<label for="band_name">Band name</label>
		<input type="text" name="band[name]" id="band_name" value"<%=value(band, :name)%>" >
		<br>
		<br>
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	  <input type="submit" value="<%=button_words%>">

</form>
